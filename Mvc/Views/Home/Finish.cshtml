@model TodoServices.Shared.Dto.TodoInfo

@{
    ViewData["Title"] = Localizer["Finish todo"];
}

<pagetitle>@Localizer["Finish todo"]</pagetitle>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Finish" asp-route-id="@Model.Id" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            <input asp-for="AuthorId" type="hidden" />
            <input asp-for="PerformerId" type="hidden" />


            <div class="form-group">
                <label for="EstimatedCost" class="control-label">@Localizer["Estimated cost"]</label>
                <input asp-for="EstimatedCost" class="form-control-plaintext" />
                <span asp-validation-for="EstimatedCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Priority" class="control-label">@Localizer["Priority"]</label>
                <input asp-for="Priority" class="form-control-plaintext" />
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Title" class="control-label">@Localizer["Title"]</label>
                <input asp-for="Title" class="form-control-plaintext" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Description" class="control-label">@Localizer["Description"]</label>
                <input asp-for="Description" class="form-control-plaintext" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CreateDate" class="control-label">@Localizer["Create date"]</label>
                <input asp-for="CreateDate" class="form-control-plaintext" />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Cost" class="control-label">@Localizer["Type final cost"]</label>
                <input asp-for="Cost" class="form-control" autofocus required />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit"  class="btn btn-primary">@Localizer["Finish"]</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-route-Id="@Model.ParentId" asp-action=@(Model.ParentId.HasValue ?"Details":"Index") class="btn-link"> @Localizer["Back to list"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
